{% extends 'base.html.twig' %}

{% block body %}

	<div class="container">
		<h1 class="mb-5">Liste des favoris</h1>
		{% for d in data['tab'] %}
			<div class="media mb-5 p-4 border border-secondary rounded-pill bg-light">
				<img src="{{d.urlToimage}}" height="64" width="64" class="align-self-center mr-3" alt="image de l'article">
				<div class="media-body">
					<a href="{{d.url}}" target="_blank" style=" text-decoration: none; background-color: none; color:black;">
						<h5 class="mt-0">{{d.title}}</h5>
						<p>
							{% autoescape %}
								{{ d.description|raw }}
								{# var won't be escaped #}
							{% endautoescape %}
						</p>
						<p class="mb-0">{{d.author}}</p>
						<p>{{ d.publishedAt|date('d-m-Y H:i') }}</p>
					</a>
					{% if d.partage %}
						<a href="/favoris/partager/{{d.id}}" class="btn btn-primary">
							<svg width="1em" height="1em" viewbox="0 0 16 16" class="bi bi-x-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
								<path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
								<path fill-rule="evenodd" d="M11.854 4.146a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708-.708l7-7a.5.5 0 0 1 .708 0z"/>
								<path fill-rule="evenodd" d="M4.146 4.146a.5.5 0 0 0 0 .708l7 7a.5.5 0 0 0 .708-.708l-7-7a.5.5 0 0 0-.708 0z"/>
							</svg>
							Enlever le partage
						</a>
					{% else %}
						<a href="/favoris/partager/{{d.id}}" class="btn btn-primary">
							<svg width="1em" height="1em" viewbox="0 0 16 16" class="bi bi-box-arrow-in-up-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
								<path fill-rule="evenodd" d="M1.5 3A1.5 1.5 0 0 1 3 1.5h10A1.5 1.5 0 0 1 14.5 3v5a.5.5 0 0 1-1 0V3a.5.5 0 0 0-.5-.5H3a.5.5 0 0 0-.5.5v10a.5.5 0 0 0 .5.5h4a.5.5 0 0 1 0 1H3A1.5 1.5 0 0 1 1.5 13V3z"/>
								<path fill-rule="evenodd" d="M11.5 6a.5.5 0 0 0-.5-.5H6a.5.5 0 0 0-.5.5v5a.5.5 0 0 0 1 0V6.5H11a.5.5 0 0 0 .5-.5z"/>
								<path fill-rule="evenodd" d="M5.646 5.646a.5.5 0 0 0 0 .708l8 8a.5.5 0 0 0 .708-.708l-8-8a.5.5 0 0 0-.708 0z"/>
							</svg>
							Partager
						</a>
					{% endif %}
					<a href="/favoris/delete/{{d.id}}" class="btn btn-danger">
						Supprimer des favoris
						<svg width="1em" height="1em" viewbox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
							<path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
							<path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
						</svg>
					</a>
				</div>
			</div>

		{% endfor %}
	</div>

{% endblock %}
